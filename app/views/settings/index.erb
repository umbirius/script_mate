<h3>Settings</h3>
    <div class="table-responsive">          
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% if !!@settings %>
        <% @settings.each do |setting| %>
            <tr>
                <td><a href="/projects/<%= @project.id%>/settings/<%=setting.id%>"><%= setting.name%></a></td>
                <td><%= setting.description%></td>
                <td><a href="/projects/<%= @project.id%>/settings/<%=setting.id%>/edit" class=" btn btn-default btn-xs">Edit</a></td>
                <td>
                    <form method='POST' action="/projects/<%= @project.id%>/settings/<%=setting.id%>/delete">
                    <input type="hidden" name="_method" value="delete">
                    <input type="submit" class="btn btn-default btn-xs" value="Delete">
                    </form>
                </td>
                
            </tr>
        <% end %> 
    <% end %>
      </tbody>
    </table>
    <p><a href="/projects/<%=@project.id%>/settings/new" class=" btn btn-default btn-xs">Add Setting</a></p>
    <p><a href="/projects/<%=@project.id%>" class=" btn btn-default btn-xs">Back</a></p>
    </div>
    </div>
