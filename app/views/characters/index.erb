<h3>Characters</h3>
<div class="table-responsive">          
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Bio</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% if !!@characters %>
    <% @characters.each do |character| %>
        <tr>
            <td><a href="/projects/<%= @project.id%>/characters/<%=character.id%>"><%= character.name%></a></td>
            <td><%= character.age%></td>
            <td><%= character.bio%></td>
            <td><a href="/projects/<%= @project.id%>/characters/<%=character.id%>/edit" class=" btn btn-default btn-xs">Edit</a></td>
            <td>
                <form method='POST' action="/projects/<%= @project.id%>/characters/<%=character.id%>/delete">
                <input type="hidden" name="_method" value="delete">
                <input type="submit" class="btn btn-default btn-xs" value="Delete">
                </form>
            </td>
            
        </tr>
    <% end %> 
<% end %>
  </tbody>
</table>
<p><a href="/projects/<%=@project.id%>/characters/new" class=" btn btn-default btn-xs">Add Character</a></p>
<p><a href="/projects/<%=@project.id%>" class=" btn btn-default btn-xs">Back</a></p>
</div>
</div>
