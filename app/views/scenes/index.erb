
<h3>Scenes</h3>
    <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Order</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% if !!@scenes %>
        <% @scenes.each do |scene| %>
            <tr>
                <td><a href="/projects/<%= @project.id%>/scenes/<%=scene.id%>"><%= scene.name%></a></td>
                <td><%= scene.description%></td>
                <% if scene.order %>
                    <td><%= scene.order %></td>
                <% else %>
                    <td>-</td>
                <% end %>
                <td><a href="/projects/<%= @project.id%>/scenes/<%=scene.id%>/edit" class=" btn btn-default btn-xs">Edit</a></td>
                <td>
                    <form method='POST' action="/projects/<%= @project.id%>/scenes/<%=scene.id%>/delete">
                        <input type="hidden" name="_method" value="delete">
                        <input type="submit" class="btn btn-default btn-xs" value="Delete">
                    </form>
                </td>
                
            </tr>
        <% end %> 
    <% end %>
      </tbody>
    </table>
    <p><a href="/projects/<%=@project.id%>/scenes/order/edit" class=" btn btn-default btn-xs">Edit Scene Order</a></p>
    <p><a href="/projects/<%=@project.id%>/scenes/new" class=" btn btn-default btn-xs">Add scene</a></p>
    <p><a href="/projects/<%=@project.id%>" class=" btn btn-default btn-xs">Back</a></p>
    </div>
    </div>